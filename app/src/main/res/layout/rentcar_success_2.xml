<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#2e2929"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/page_return"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/left_white_go" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/title_orange"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/turn_to_index"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:text="首页"
                android:textColor="#ffffff"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="33dp"
                    android:text="订车成功"
                    android:textColor="#000000"
                    android:textSize="35dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="尊敬的客户，您好，您已成功预约搜派旗下电动车！"
                        android:textColor="#666666"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="预约车型："
                            android:textColor="#666666"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/carType"
                            android:layout_width="1px"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="取车地点为："
                            android:textColor="#666666"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/carLocal"
                            android:layout_width="1px"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="取车日期："
                            android:textColor="#666666"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/carDate"
                            android:layout_width="1px"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="请您在预约时间内按时取车，祝您用车愉快!"
                        android:textColor="#666666"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:gravity="right"
                    android:text="搜派电动车"
                    android:textColor="@color/title_orange"
                    android:lineSpacingExtra ="5dp"
                    android:textSize="13dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>