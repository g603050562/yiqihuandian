<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alertdialog_style"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alertDialogTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="请设置交易密码:"
            android:textColor="#333333"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="2px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="#ffffff"
                        android:text="交易密码："
                        android:textColor="#333333"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/panelMineIndexAlertDialogPsw"
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:imeOptions="actionDone"
                        android:background="@drawable/edit_view"
                        android:inputType="numberPassword"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="#ffffff"
                        android:text="重复密码："
                        android:textColor="#333333"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/panelMineIndexAlertDialogPswRe"
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:imeOptions="actionDone"
                        android:background="@drawable/edit_view"
                        android:inputType="numberPassword"
                        android:padding="5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/panelMineIndexAlertDialogSubmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_corners_green_radius_10"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="13dp"
                android:text="确定"
                android:textColor="#ffffff" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>