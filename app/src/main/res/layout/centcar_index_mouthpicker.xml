<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corners_white_radius_10"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="租车时长/费用"
            android:textColor="#333333"
            android:textSize="15dp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mouth_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="1个月/300元"
                    android:textColor="#40b25d"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mouth_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="2个月/600元"
                    android:textColor="#40b25d"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mouth_3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="3个月/900元"
                    android:textColor="#40b25d"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mouth_4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="4个月/1200元"
                    android:textColor="#40b25d"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mouth_5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="5个月/1500元"
                    android:textColor="#40b25d"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mouth_6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="6个月/1800元"
                    android:textColor="#40b25d"
                    android:textSize="13dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>