<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alertdialog_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alertDialogTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="您的帐号已在其他终端登录，您已经被强制下载，请您核实您的帐号信息是否安全!"
            android:textColor="@color/green"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/alertDialogDivid"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/payAlertdialogSuccess"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="是"
                android:textColor="@color/green"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>